<Window x:Class="Recorder.SelectionWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="#33FFFFFF"
        ShowInTaskbar="False"
        Topmost="True"
        Cursor="Cross">
    <Canvas Name="SelectionCanvas">
        <Border x:Name="SelectionRectangle"
                BorderBrush="Red"
                BorderThickness="2"
                Background="#44FF0000"
                Visibility="Collapsed"/>
    </Canvas>
</Window>