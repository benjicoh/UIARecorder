<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Recorder.MainPage">

    <VerticalStackLayout Padding="30,0" Spacing="15">
        <Label Text="Screen Recorder" Style="{StaticResource Headline}" SemanticProperties.HeadingLevel="Level1" />

        <Entry x:Name="ProcessNameEntry" Placeholder="Enter process name (e.g., notepad)" />

        <Picker x:Name="SourcePicker" Title="Select Recording Source">
            <Picker.ItemsSource>
                <x:Array Type="{x:Type x:String}">
                    <x:String>Desktop</x:String>
                    <x:String>Window</x:String>
                    <x:String>Region</x:String>
                </x:Array>
        </Picker>

        <HorizontalStackLayout Spacing="10" HorizontalOptions="Center">
            <Button
                x:Name="RecordButton"
                Text="Record"
                Clicked="OnRecordClicked" />
            <Button
                x:Name="StopButton"
                Text="Stop"
                Clicked="OnStopClicked"
                IsEnabled="False" />
        </HorizontalStackLayout>
    </VerticalStackLayout>

</ContentPage>