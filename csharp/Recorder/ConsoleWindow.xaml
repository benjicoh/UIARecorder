<Window x:Class="Recorder.ConsoleWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Recorder"
        xmlns:utils="clr-namespace:Recorder.Utils"
        mc:Ignorable="d"
        Title="Console" Height="450" Width="800"
        Background="#2b2b2b"
        Foreground="White">
    <Window.Resources>
        <utils:LogLevelToBrushConverter x:Key="LogLevelToBrushConverter" />
    </Window.Resources>
    <Grid>
        <RichTextBox x:Name="LogRichTextBox"
                     IsReadOnly="True"
                     FontFamily="Consolas"
                     Background="#2b2b2b"
                     Foreground="White"
                     BorderThickness="0"
                     VerticalScrollBarVisibility="Auto"
                     HorizontalScrollBarVisibility="Auto">
            <RichTextBox.Resources>
                <Style TargetType="{x:Type Paragraph}">
                    <Setter Property="Margin" Value="0" />
                </Style>
            </RichTextBox.Resources>
        </RichTextBox>
    </Grid>
</Window>